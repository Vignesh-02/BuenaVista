<%- include("../partials/header"); %>

<div class="container" style="max-width: 1200px;">
    <!-- Back Button -->
    <a href="/locations/<%= location._id %>" class="btn btn-camp-secondary mb-4">
        <i class="bi bi-arrow-left me-2"></i>Back to Location
    </a>
    
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="form-custom">
                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width: 60px; height: 60px; background: var(--color-info);">
                        <i class="bi bi-chat-quote text-white" style="font-size: 1.5rem;"></i>
                    </div>
                    <h2 class="page-title mb-2">Add Comment</h2>
                    <p class="text-muted">Share your thoughts about <strong><%= location.name %></strong></p>
                </div>
                
                <form action="/locations/<%= location._id %>/comments" method="POST">
                    <div class="mb-4">
                        <label for="comment" class="form-label">
                            <i class="bi bi-chat-dots me-1"></i>Your Comment
                        </label>
                        <textarea 
                            class="form-control" 
                            id="comment" 
                            name="comment[text]" 
                            rows="4"
                            placeholder="What did you love about this place? Any tips for future visitors?"
                            required
                        ></textarea>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-camp-primary btn-lg">
                            <i class="bi bi-send me-2"></i>Post Comment
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-4">
                    <a href="/locations/<%= location._id %>" class="text-muted">
                        <i class="bi bi-x-lg me-1"></i>Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>
