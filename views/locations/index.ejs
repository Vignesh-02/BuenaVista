<%- include("../partials/header"); %>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container" style="max-width: 1200px;">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1>
                    <i class="bi bi-compass me-2"></i>
                    Explore Amazing Locations
                </h1>
                <p class="mb-4">
                    Discover breathtaking views shared by strangers from across the globe. 
                    Join our community â€” add your favorite places, share your adventures, and connect with fellow explorers worldwide.
                </p>
                <% if(currentUser) { %>
                    <a class="btn btn-light btn-lg" href="/locations/new">
                        <i class="bi bi-plus-lg me-2"></i>Add New Location
                    </a>
                <% } else { %>
                    <a class="btn btn-light btn-lg" href="/register">
                        <i class="bi bi-person-plus me-2"></i>Join to Add Locations
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Locations Grid -->
<div class="container" style="max-width: 1200px;">
    <% if(locations.length === 0) { %>
        <div class="text-center py-5">
            <i class="bi bi-geo-alt" style="font-size: 4rem; color: var(--color-primary-light);"></i>
            <h3 class="mt-3">No locations yet</h3>
            <p class="text-muted">Add a destination!</p>
            <% if(currentUser) { %>
                <a href="/locations/new" class="btn btn-camp-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add First Location
                </a>
            <% } %>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% locations.forEach(function(location) { %>
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <article class="camp-card" data-location-id="<%= location._id %>">
                        <div class="camp-card-image">
                            <img 
                                src="<%= location.image %>" 
                                alt="<%= location.name %>"
                                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                loading="lazy"
                            >
                            <div class="camp-card-placeholder" style="display: none;">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="camp-card-body">
                            <h3 class="camp-card-title"><%= location.name %></h3>
                            <% if(location.description) { %>
                                <p class="camp-card-description"><%= location.description %></p>
                            <% } else { %>
                                <p class="camp-card-description text-muted">Discover this amazing destination...</p>
                            <% } %>
                            <div class="camp-card-footer">
                                <div class="d-flex flex-column">
                                    <% if(location.author && location.author.username) { %>
                                        <span class="camp-card-author" title="<%= location.author.username %>">
                                            <i class="bi bi-person-circle me-1"></i>
                                            By <strong><%= location.author.username %></strong>
                                        </span>
                                    <% } else { %>
                                        <span class="camp-card-author">
                                            <i class="bi bi-person-circle me-1"></i>
                                            Anonymous
                                        </span>
                                    <% } %>
                                    <span class="text-muted location-likes-count" style="font-size: 0.8rem;">
                                        <i class="bi bi-heart-fill me-1" style="color: #e63946;"></i>
                                        <span class="likes-num"><%= typeof location.likes === "number" ? location.likes : 0 %></span> likes
                                    </span>
                                </div>
                                <a href="/locations/<%= location._id %>" class="btn btn-camp-primary btn-sm">
                                    View <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<script>
    (function () {
        function updateLikeCounts() {
            fetch("/locations/api/likes", { credentials: "same-origin" })
                .then(function (res) { return res.ok ? res.json() : Promise.reject(); })
                .then(function (likes) {
                    Object.keys(likes).forEach(function (id) {
                        var el = document.querySelector('.camp-card[data-location-id="' + id + '"] .likes-num');
                        if (el) el.textContent = likes[id];
                    });
                })
                .catch(function () {});
        }
        updateLikeCounts();
        window.addEventListener("pageshow", function (event) {
            if (event.persisted) updateLikeCounts();
        });
    })();
</script>

<%- include("../partials/footer"); %>
