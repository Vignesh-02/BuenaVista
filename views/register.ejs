<%- include("partials/header"); %>

<div class="container" style="max-width: 1200px;">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="form-custom">
                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);">
                        <i class="bi bi-person-plus-fill text-white" style="font-size: 2rem;"></i>
                    </div>
                    <h2 class="page-title mb-2">Create Account</h2>
                    <p class="text-muted">Join our community of explorers</p>
                </div>
                
                <form action="/register" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">
                            <i class="bi bi-person me-1"></i>Username
                        </label>
                        <input 
                            type="text" 
                            class="form-control form-control-lg" 
                            id="username" 
                            name="username" 
                            placeholder="Letters, numbers, underscores only"
                            minlength="5"
                            maxlength="30"
                            pattern="[a-zA-Z0-9_]+"
                            title="5–30 characters; letters, numbers, and underscores only"
                            required
                            autofocus
                        >
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            5–30 characters. Letters, numbers, and underscores only (no spaces or special characters).
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">
                            <i class="bi bi-envelope me-1"></i>Email
                        </label>
                        <input 
                            type="email" 
                            class="form-control form-control-lg" 
                            id="email" 
                            name="email" 
                            placeholder="you@example.com"
                            required
                        >
                        <div class="form-text">
                            <i class="bi bi-shield-check me-1"></i>
                            We'll use this for onboarding and important updates. Must be a valid email address.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="password" class="form-label">
                            <i class="bi bi-lock me-1"></i>Password
                        </label>
                        <input 
                            type="password" 
                            class="form-control form-control-lg" 
                            id="password" 
                            name="password" 
                            placeholder="At least 8 characters"
                            minlength="8"
                            required
                        >
                        <div class="form-text">
                            <i class="bi bi-shield-check me-1"></i>
                            Use at least 8 characters for a secure password.
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-camp-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-4">
                    <p class="text-muted mb-0">
                        Already have an account? 
                        <a href="/login" class="fw-semibold" style="color: var(--color-primary);">
                            Sign in here
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer"); %>
